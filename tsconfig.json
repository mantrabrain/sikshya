{
  "compilerOptions": {
    "outDir": "./build/",
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "assets/src/**/*.jsx",
    "assets/src/**/*.js",
    "assets/src/**/*.ts",
    "assets/src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
